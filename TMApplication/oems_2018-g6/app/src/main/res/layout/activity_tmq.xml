<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.Guideline
        android:id="@+id/left_margin_guidline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".10" />

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="258dp"
        android:layout_height="87dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/left_margin_guidline"
        app:layout_constraintTop_toTopOf="parent" />



        <RadioButton
            android:id="@+id/never_rad_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Never"
            app:layout_constraintStart_toStartOf="@+id/left_margin_guidline"
            app:layout_constraintTop_toBottomOf="@+id/question_text_view" />

        <RadioButton
            android:id="@+id/seldom_rad_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="24dp"
            android:text="Seldom"
            app:layout_constraintStart_toStartOf="@+id/left_margin_guidline"
            app:layout_constraintTop_toBottomOf="@+id/question_text_view" />

        <RadioButton
            android:id="@+id/sometimes_rad_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="88dp"
            android:text="Sometimes"
            app:layout_constraintStart_toStartOf="@+id/left_margin_guidline"
            app:layout_constraintTop_toBottomOf="@+id/question_text_view" />

        <RadioButton
            android:id="@+id/often_rad_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="88dp"
            android:text="Often"
            app:layout_constraintStart_toStartOf="@+id/left_margin_guidline"
            app:layout_constraintTop_toBottomOf="@+id/question_text_view" />

        <RadioButton
            android:id="@+id/always_rab_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="144dp"
            android:text="Always"
            app:layout_constraintStart_toStartOf="@+id/left_margin_guidline"
            app:layout_constraintTop_toBottomOf="@+id/question_text_view" />


    <Button
        android:id="@+id/previous_button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:text="Previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/always_rab_but" />

    <TextView
        android:id="@+id/category_text_view"
        android:layout_width="251dp"
        android:layout_height="32dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/left_margin_guidline"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="50dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/always_rab_but" />

    <Button
        android:id="@+id/check_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="28dp" />

</android.support.constraint.ConstraintLayout>